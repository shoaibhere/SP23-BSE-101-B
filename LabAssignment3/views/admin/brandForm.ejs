<div class="container mt-5">
    <h2>Brand Details</h2>
    <form method="post" action="/admin/brands/create" enctype="multipart/form-data">

        <!-- Name Input -->
        <div class="form-group">
            <label for="brandName">Title</label>
            <input type="text" class="form-control" id="brandName" name="brandName" placeholder="Enter Title">
        </div>

        <!-- Image Input -->
        <div class="form-group">
            <label for="brandImage">Image</label>
            <input type="file" class="form-control" id="brandImage" accept="image/*" required name="brandImage">
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>